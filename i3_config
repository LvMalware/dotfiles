#client.focused           #ca9ee6 #ca9ee6 #1e1e2e  #ca9ee6 #ca9ee6
#client.focused_inactive  #6c7086 #1e1e2e #cdd6f4  #ca9ee6 #6c7086
#client.unfocused         #6c7086 #1e1e2e #cdd6f4  #ca9ee6 #6c7086
#client.urgent            #ca9ee6    #1e1e2e #ca9ee6 #6c7086  #ca9ee6
#client.placeholder       #6c7086 #1e1e2e #cdd6f4  #6c7086  #6c7086

bindsym $mod+BackSpace mode "$mode_system"

for_window [window_role="About"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
#for_window [class="URxvt"] floating enable
for_window [floating] sticky disable

exec --no-startup-id picom -CG -b
exec --no-startup-id nitrogen --restore
exec --no-startup-id synclient TouchpadOff=1
exec --no-startup-id pulseaudio
exec --no-startup-id dunst
exec --no-startup-id lxpolkit
exec --no-startup-id mate-settings-daemon
exec --no-startup-id x-terminal-emulator
#exec --no-startup-id mate-volume-control-status-icon
#exec --no-startup-id nm-applet
#exec --no-startup-id alttab
#exec --no-startup-id sh $HOME/.config/i3/lock.sh

bindsym Mod4+p exec --no-startup-id x-terminal-emulator -e iperl
bindsym Mod4+w exec --no-startup-id firefox
bindsym Mod4+b exec --no-startup-id sh $HOME/.batlevel.sh
bindsym XF86MonBrightnessDown exec light -U 5
bindsym XF86MonBrightnessUp exec light -A 5
bindsym Print       exec flameshot full -p $HOME/Imagens
bindsym Shift+Print exec flameshot gui
#bindsym $mod+Tab exec "rofi -show window"

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle
